#!/bin/sh
APP="$0"
while [ -h "$APP" ] ; do
  ls=$(ls -ld "$APP")
  link=$(expr "$ls" : '.*-> \(.*\)$')
  if expr "$link" : '/.*' > /dev/null; then
    APP="$link"
  else
    APP=$(dirname "$APP")"/$link"
  fi
done
NAME=$(basename "$APP")
APP=$(dirname "$APP")
APP=$(cd "$APP" && pwd)
APP="$APP/$NAME"
PATH=$PATH
JAVA=java
OPTIONS=-Djava.awt.headless=true
MAIN=net.oneandone.stool.Main

$JAVA $OPTIONS $STOOL_OPTS -cp "$APP" $MAIN "$@"
exit $?
